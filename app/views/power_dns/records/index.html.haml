
%h1= @domain.name

= link_to fa_icon('plus-square') + _('new'), new_domain_record_path(@domain), class: 'btn btn-success'
= link_to fa_icon('plus-square') + _('new A'), new_domain_records_path(@domain, 'a'), class: 'btn btn-success'

%table.table
  %thead
    %tr
      %th= _('Name')
      %th= _('Type')
      %th= _('Content')
      %th= _('TTL')
      %th= _('Prio')
      %th= _('Status')
  %tbody
    - @records.each do |record|
      %tr
        %td
          = record.name
          - if can?(:edit, record)
            = link_to fa_icon('pencil'), edit_domain_record_path(@domain, record)
          - if can?(:delete, record)
            = link_to fa_icon('remove'), domain_record_path(@domain, record), method: :delete, data: { confirm: _("Are you sure?") }
        %td= record.type
        %td= record.content
        %td= record.ttl
        %td= record.prio
        %td
          - if record.disabled
            = _('disabled')
            = link_to fa_icon('toggle-on'), toggle_domain_record_path(@domain, record)
          - else
            = _('enabled')
            = link_to fa_icon('toggle-off'), toggle_domain_record_path(@domain, record)
